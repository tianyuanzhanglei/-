.title{
  font-size: 40rpx;
  padding: 20rpx;
}
.box{
  position: relative;
  display: inline-block;
  width: 374rpx;
  height: 200rpx;
}
.post{
  position: absolute;
  left: 25rpx;
  top: 25rpx;
  display: inline-block;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  overflow: hidden;
  padding: 25rpx 0;
  box-sizing: border-box;
}
.red{
  background: #F76968;
}
.green{
  background: #8BC34A;
}
.bor_right{
  box-sizing: border-box;
  border-right: 1rpx dashed #999;
}
.bor_bottom{
    box-sizing: border-box;
  border-bottom: 1rpx dashed #999;
}
.rank{
  font-size: 35rpx;
  text-align: center;
}
.situation{
  position: absolute;
  right: 25rpx;
  top: 25rpx;
  display: inline-block;
  width: 150rpx;
  height: 150rpx;
}
.full{
  height: 75rpx;
  line-height: 100rpx;
  font-size: 35rpx;
}
.no_full{
  height: 50rpx;
  line-height: 50rpx;
  font-size: 35rpx; 
}
.people{
  height: 50rpx;
  line-height: 50rpx;
  font-size: 32rpx;
  color: #999;
}



.postbox{
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
  background:  #ccc;
  margin-bottom: 10rpx;
}
.postname{
  display: inline-block;
  padding-left: 20rpx;
}
.peo_num{
  display: inline-block;
  float: right;
  margin-right: 50rpx;
}

.stubox{
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
  border-bottom: 1rpx solid #ccc;
  margin-left: 40rpx;
}
.stuname{
  display: inline-block;
  width: 540rpx;
}
.choice{
  width: 60rpx;
  display: inline-block
}
.switch{
  box-sizing: border-box;
  display: inline-block;
  width: 110rpx;
  padding-left: 20rpx;
}

.btn_arrange{
  margin: 50rpx 0;
  background: #F76968
}
.picker{
  display: inline-block;
}
.frequency{
  color: #F76968
}